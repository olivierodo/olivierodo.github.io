#

ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
brew doctor

# install softwares

brew install git \
  tmux

brew cask install \
  station \
  alfred \
  iterm2 \
  spotify \
  opera \
  insomnia \
  docker \
  google-backup-and-sync \
  keepassx \
  caffeine \
  mongodb-compass \
  sequel-pro \
  recordit \
  vlc

## Define bash as shell

chsh -s /bin/bash

cd ~

## Dev config

CURRENT_USER=$(whoami)

git clone https://github.com/olivierodo/dotfiles.git

cd ./dotfiles
sh ./install.sh

